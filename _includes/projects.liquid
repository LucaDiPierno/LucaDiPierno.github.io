<div class="col">
  <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if project.img %}
        {%
          include figure.liquid
          loading="eager"
          path=project.img
          sizes = "250px"
          alt="project thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ project.title }}</h2>


        {% if project.status %}
          {% assign status = project.status | downcase %}
          {% case status %}
            {% when "active" %}
              {% assign status_label = "In Progress" %}
              {% assign badge_class = "badge badge-success" %}
            {% when "completed" %}
              {% assign status_label = "Finished" %}
              {% assign badge_class = "badge badge-primary" %}
            {% when "upcoming" %}
              {% assign status_label = "Planned" %}
              {% assign badge_class = "badge badge-warning" %}
            {% else %}
              {% assign status_label = status %}
              {% assign badge_class = "badge badge-secondary" %}
          {% endcase %}
          <span class="{{ badge_class }} mb-2">{{ status_label }}</span>
        {% endif %}


        <p class="card-text">{{ project.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if project.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if project.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ project.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
